<div class="row">
  <div class="col-xs-12">
    <%= form_tag user_session_path, novalidate: true do |f| %>
      <div class="form-group">
        <%= label_tag 'user[email]', 'Email' %><br />
        <%= email_field_tag 'user[email]', nil, autofocus: true, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag 'user[password]', 'Password' %><br />
        <%= password_field_tag 'user[password]', nil, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag 'Log in', :class => 'btn btn-primary' %>
        <div class="checkbox remember-me">
          <label for="user_remember_me">
            <%= check_box_tag 'user[remember_me]' %>
            Remember me
          </label>
        </div>
      </div>
    <% end %>
  </div>
</div>