<div class="row">
  <div class="col-xs-12 col-md-8">
    <%= form_for @website do |f| %>
      <%= show_active_record_errors @website %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :url, 'URL (optional)' %>
        <%= f.text_field :url, class: 'form-control' %>
      </div>
      <%= f.submit @website.new_record? ? 'Create' : 'Update', class: 'btn btn-primary' %>
      <%= back_button %>
    <% end %>
  </div>
</div>